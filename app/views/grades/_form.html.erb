<%= form_with(model: grade) do |form| %>
  <% if grade.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(grade.errors.count, "error") %> prohibited this grade from being saved:</h2>

      <ul>
        <% grade.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :grade_value, style: "display: block" %>
    <%= form.text_field :grade_value %>
  </div>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :student_id, "Student", style: "display: block" %>
    <%= form.collection_select :student_id, Student.all, :id, :firstname %>
  </div>
  <div>
    <%= form.label :branch_id, "Branch", style: "display: block" %>
    <%= form.collection_select :branch_id, Branch.all, :id, :name %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
